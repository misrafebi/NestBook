            <div class="d-flex justify-content-between align-items-center mb-4">
                <div class="input-group  w-25">
                    <input type="text" class="form-control  w-25" placeholder="Search Coupon"
                        aria-label="Recipient's username" aria-describedby="button-addon2">
                    <button class="btn btn-outline-secondary" id="search-btn" type="button" id="button-addon2"><i
                            class="fa-solid fa-magnifying-glass"></i></button>
                </div>

                <!-- <input type="text" class="form-control w-25" placeholder="Search Coupon "><span><i class="fa-solid fa-magnifying-glass"></i></span> -->
                <select class=" sort-box">
                    <option>Sort by</option>
                    <option>Code</option>
                    <option>Discount</option>
                    <option>Status</option>
                </select>
            </div>
        <!-- </div> -->
        <br>
        <table class="table ">
            <thead>
                <tr>
                    <th>Book</th>
                    <th>Customer</th>
                    <th>Date</th>
                    <th>MRP</th>
                    <th>Status</th>
                </tr>
            </thead>
            <tbody>
                <tr>
                    <td><img src="book1.jpg" alt="Will"> Will</td>
                    <td>Rahul</td>
                    <td>10/12/2024</td>
                    <td>â‚¹370</td>
                    <td><span class="badge badge-success">Completed</span></td>
                </tr>
                
                
            </tbody>
        </table>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
