<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookNest - Customers</title>
    <!-- <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet"> -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet">

    <style>
        body {
            font-family: Arial, sans-serif;
        }



        .main-content {
            margin-left: 220px;
            padding: 20px;
        }

        .table th,
        .table td {
            vertical-align: middle;
        }

        .status-active {
            color: green;
        }

        .status-blocked {
            color: red;
        }

        #search-btn {
            border-radius: 0px 5px 5px 0px;
            border-color: #d6d1d1;
        }

        .sort-box {
            width: 100px;
            display: block;
            /* width: 100%; */
            height: calc(1.5em + .75rem + 2px);
            padding: .375rem .75rem;
            font-size: 1rem;
            font-weight: 400;
            line-height: 1.5;
            color: #495057;
            background-color: #fff;
            background-clip: padding-box;
            border: 1px solid #ced4da;
            border-radius: .25rem;
            transition: border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }

        a {
            text-decoration: none;
        }

        a:hover {
            text-decoration: none;
            color: white;
        }
    </style>
</head>

<body>
    <%- include('../partials/admin/sideBar') %>

        <div class="main-content">
            <div class="d-flex justify-content-between align-items-center mb-4">
                <h4>Customers</h4>
                <a href="/admin/addCustomer" class="btn btn-dark">+ Add Customer</a>
            </div>
            <%if(customers.length==0){%>
                <div class="col-md-12">
                    <p>No Customers found.</p>
                </div>
                <%} else{%>

                    <div class="d-flex justify-content-between align-items-center mb-4">
                        <div class="input-group  w-25">
                            <input type="text" class="form-control  w-25" placeholder="Search Customers"
                                aria-label="Recipient's username" aria-describedby="button-addon2" id="searchInput"
                                onkeyup="searchUsers()">
                            <button class="btn btn-outline-secondary" id="search-btn" type="button"
                                id="button-addon2"><i class="fa-solid fa-magnifying-glass"></i></button>
                        </div>
                        <!----------------------------->
                        <!--------- search ------------>
                        <script>
                            function searchUsers() {
                                const input = document.getElementById('searchInput')
                                const filter = input.value.toLowerCase()
                                const table = document.getElementById('list-table')
                                const rows = table.getElementsByTagName('tr')

                                for (let i = 0; i < rows.length; ++i) {
                                    const usernameCell = rows[i].getElementsByTagName('td')[1]
                                    if (usernameCell) {
                                        const username = usernameCell.textContent || usernameCell.innerText
                                        if (username.toLowerCase().indexOf(filter) > -1) {
                                            rows[i].style.display = ''
                                        } else {
                                            rows[i].style.display = 'none'
                                        }
                                    }
                                }
                            }
                        </script>
                        <!----------------------->

                        <select class="sort-box">
                            <option>Sort by</option>
                            <option>Ascending (A-Z)</option>
                            <option>Descending (Z-A)</option>
                            <option>Newest First</option>
                            <option>Oldest First</option>
                            <option>Recently Active</option>
                        </select>

                    </div>
                    <br>

                    <table class="table " id="list-table">
                        <thead>
                            <tr>
                                <th>Sl.No</th>
                                <th>Name</th>
                                <th>Email</th>
                                <th>Status</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <%customers.forEach((customer,index)=>{%>
                                <tr>

                                    <td>
                                        <%= (currentPage - 1) * 10 + index + 1 %>
                                    </td>
                                    <td>
                                        <%=customer.name%>
                                    </td>
                                    <td>
                                        <%=customer.email%>
                                    </td>

                                    <td>
                                        <%if(!customer.isBlocked){%>
                                            <span class="status-active">Active</span>
                                            <%}else{%>
                                                <span class="status-blocked">Blocked</span>
                                    </td>
                                    <%}%>
                                        <td>
                                            <a class="btn btn-sm btn-outline-primary edit-btn"
                                                href="/admin/edit-customer/<%= customer._id %>">Edit</a>
                                        </td>

                                </tr>
                                <%});%>

                        </tbody>



                        <%}%>
                    </table>

                    <div class="pagination">
                        <% if (currentPage> 1) { %>
                            <a href="?page=<%= currentPage - 1 %>" class="btn btn-outline-secondary">
                                << /a>
                                    <% } %>

                                        <% if (currentPage> 4) { %>
                                            <a href="?page=1" class="btn btn-outline-secondary">1</a>
                                            <% if (currentPage> 5) { %>
                                                <span class="dots">...</span>
                                                <% } %>
                                                    <% } %>

                                                        <% for (let i=Math.max(1, currentPage - 2); i
                                                            <=Math.min(totalPages, currentPage + 2); i++) { %>
                                                            <a href="?page=<%= i %>"
                                                                class="btn <%= i === currentPage ? 'btn-primary' : 'btn-outline-secondary' %>">
                                                                <%= i %>
                                                            </a>
                                                            <% } %>

                                                                <% if (currentPage < totalPages - 3) { %>
                                                                    <% if (currentPage < totalPages - 4) { %>
                                                                        <span class="dots">...</span>
                                                                        <% } %>
                                                                            <a href="?page=<%= totalPages %>"
                                                                                class="btn btn-outline-secondary">
                                                                                <%= totalPages %>
                                                                            </a>
                                                                            <% } %>

                                                                                <% if (currentPage < totalPages) { %>
                                                                                    <a href="?page=<%= currentPage + 1 %>"
                                                                                        class="btn btn-outline-secondary">></a>
                                                                                    <% } %>
                    </div>







        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/js/bootstrap.bundle.min.js"></script>

        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
        <!-- <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script> -->

        <%if(message){%>
            <script>
                alert('<%=message%>')
            </script>
            <%}%>

                <script>
                    const urlParams = new URLSearchParams(window.location.search)
                    const message = urlParams.get('message')
                    if (message) {
                        alert(message)
                    }
                </script>

</body>


</html>