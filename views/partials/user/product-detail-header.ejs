<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>BookNest - Product Details </title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha3/dist/css/bootstrap.min.css" rel="stylesheet" />
    <style>
        /*head*/
        .product-detail-page {
            margin-top: 20px;
        }

        .carousel-item img {
            width: 296px !important;
            height: 490px !important;
            object-fit: cover;
            border-radius: 5px;
        }

        .wishlist-btn {
            position: absolute;
            top: 10px;
            right: 10px;
            background: rgba(20, 2, 2, 0.8);
            padding: 5px;
            border-radius: 50%;
            z-index: 2;
            text-align: center;
            box-shadow: 0 2px 5px rgba(0, 0, 0, 0.2);
            transition: transform 0.2s;
        }

        .wishlist-btn:hover {
            transform: scale(1.2);
            background: #ff6f61;
            color: white;
        }

        .wishlist-button i {
            color: #333;
        }

        .product-details {
            margin-top: 20px;
        }

        .product-details h3 {
            margin-bottom: 10px;
        }

        #img-size {
            height: 490px;
            position: relative;
            width: 297px;
            overflow: hidden;
        }

        #productCarousel {
            height: 490px;
            width: 297px;
        }

        .mb-3 {
            width: 190px;
            margin-bottom: 1rem !important;
        }

        #cart-btn {
            background-color: #FF9F00;
            border-color: #FF9F00;
            width: 145px;
        }

        #cart-btn:hover {
            color: #ab8b57;
            color: #ddd;
        }

        #buy-btn {
            background-color: #FB641B;
            border-color: #FB641B;
            color: #ddd;
            width: 145px;
        }

        #buy-btn:hover {
            color: #eb9164;
            color: #ddd;
        }

        .quantity-form {
            width: 100px;
            border: none;
            background-color: rgb(230, 230, 230);
        }

        .quality-btn {
            border: none;
        }

        .quality-div {
            background-color: rgb(230, 230, 230);
            border-radius: 5px;
        }

        #orginal-price {
            color: #9e9d9d;
        }

        .zoom-container {
            position: relative;
            width: 100%;
            display: inline-block;
        }

        .zoom-img {
            width: 100%;
            cursor: zoom-in;
        }

        .zoom-lens {
            position: absolute;
            border: 1px solid #d4d4d4;
            width: 100px;
            height: 100px;
            visibility: hidden;
            background-color: rgba(255, 255, 255, 0.3);
        }

        .zoom-result {
            position: absolute;
            top: 0;
            left: 110%;
            border: 1px solid #d4d4d4;
            width: 300px;
            height: 300px;
            background: white;
            overflow: hidden;
            visibility: hidden;
            background-repeat: no-repeat;
            background-size: 200% 200%;
        }

        .max-quantity-message {
            color: #dc3545;
            font-size: 0.875rem;
            margin-top: 5px;
            font-weight: 500;
        }

        .btn:disabled {
            opacity: 0.6;
            cursor: not-allowed;
        }
        
        .add-to-cart-btn {
            background-color: #007bff;
            color: white;
            border: none;
            padding: 8px 16px;
            border-radius: 4px;
            cursor: pointer;
            transition: background-color 0.3s;
        }

        .add-to-cart-btn:hover {
            background-color: #0056b3;
        }

        .add-to-cart-btn:disabled {
            background-color: #6c757d;
            cursor: not-allowed;
        }
        
        /* Animation for cart count */
        .cart-updated {
            animation: cartBounce 0.5s ease;
            color: #28a745;
            font-weight: bold;
        }
        
        @keyframes cartBounce {
            0%, 100% { transform: scale(1); }
            50% { transform: scale(1.3); }
        }
    </style>
</head>

<body>
    <div class="container">
        <div class="row">
            <div class="col-md-4">
                <div class="container product-detail-page">
                    <div class="row">
                        <!-- Product Images Carousel -->
                        <div class="col-md-6">
                            <div>
                                <div id="productCarousel" class="carousel slide" data-bs-ride="carousel">
                                    <div class="carousel-inner" id="img-size">
                                        <% for (let i=0; i < product.image.length; i++) { %>
                                            <div class="carousel-item <%= i === 0 ? 'active' : '' %>">
                                                <div class="zoom-container">
                                                    <img src="/<%= product.image[i] %>" class="d-block w-100 zoom-img"
                                                        alt="Product Image <%= i + 1 %>" id="productImage" />
                                                    <a href="/user/wishlist?id=<%=product._id%>" class="wishlist-btn">
                                                        <i class="fas fa-heart" style="color: #ddd;"></i>
                                                    </a>
                                                    <div class="zoom-lens" id="zoomLens"></div>
                                                    <div class="zoom-result" id="zoomResult"></div>
                                                </div>
                                            </div>
                                        <% } %>
                                    </div>
                                    <br>
                                    <!-- Carousel Controls -->
                                    <button class="btn btn-primary add-to-cart-btn" 
                                            data-product-id="<%= product._id%>" 
                                            id="cart-btn"
                                            <%= product.quantity === 0 ? 'disabled' : '' %>>
                                        <%= product.quantity === 0 ? 'Out of Stock' : 'Add to Cart' %>
                                    </button>
                                    <a href="/user/checkout?id=<%= product._id%>" 
                                       class="btn btn-outline-primary <%= product.quantity === 0 ? 'disabled' : '' %>"
                                       id="buy-btn"
                                       <%= product.quantity === 0 ? 'aria-disabled="true" tabindex="-1"' : '' %>>
                                        Buy Now
                                    </a>

                                    <button class="carousel-control-prev" type="button"
                                        data-bs-target="#productCarousel" data-bs-slide="prev">
                                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Previous</span>
                                    </button>
                                    <button class="carousel-control-next" type="button"
                                        data-bs-target="#productCarousel" data-bs-slide="next">
                                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                                        <span class="visually-hidden">Next</span>
                                    </button>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <br>
                <div class="product-details">
                    <h3>
                        <%=product.productName%>
                    </h3>
                    <div class="d-flex align-items-center">
                        <p class="mr-2">Rating:</p>
                        <span class="text-primary">
                            <%= averageRating %>/5
                        </span>&nbsp;
                        <span class="text-muted">(<%= totalReviews %> reviews)</span>
                    </div>
                    <p>Stock:
                        <% if (product.quantity> 0) { %>
                            In Stock
                        <% } else { %>
                            Out of Stock
                        <% } %>
                    </p>
                    <p>Available Quantity: <span id="maxQuantityDisplay"><%= product.quantity %></span></p>
                    
                    <%if(product.salePrice==product.regularPrice){%>
                        <p>Price: ₹ <%=product.salePrice%></p>
                    <% } else { %>
                        <p>Price: ₹ <%=product.salePrice%> <del id="orginal-price">₹<%= product.regularPrice %></del></p>
                    <%}%>

                    <!-- Quantity Input with Maximum Limit -->
                    <div class="input-group product-qty" style="width: 120px;">
                        <div class="input-group-prepend">
                            <button class="btn btn-outline-secondary btn-sm" type="button" id="decrease" 
                                    <%= product.quantity === 0 ? 'disabled' : '' %>>-</button>
                        </div>
                        <input type="text" class="quantity-input form-control form-control-sm text-center" 
                               id="quantity" 
                               value="<%= product.quantity === 0 ? '0' : '1' %>"
                               data-product-id="<%= product._id %>"
                               data-max-quantity="<%= product.quantity %>"
                               <%= product.quantity === 0 ? 'disabled' : '' %>>
                        <div class="input-group-append">
                            <button class="btn btn-outline-secondary btn-sm" type="button" id="increase"
                                    <%= product.quantity === 0 ? 'disabled' : '' %>>+</button>
                        </div>
                    </div>
                    <div id="quantityMessage" class="max-quantity-message"></div>

                    <br>
                </div>
            </div>
        </div>
    </div>

    <!-- Add to Cart Script -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            console.log('Product detail page loaded');
            
            // Get DOM elements
            const addToCartButton = document.getElementById('cart-btn');
            const quantityInput = document.getElementById('quantity');
            const increaseBtn = document.getElementById('increase');
            const decreaseBtn = document.getElementById('decrease');
            const quantityMessage = document.getElementById('quantityMessage');
            const maxQuantityDisplay = document.getElementById('maxQuantityDisplay');
            
            // Get product data from EJS
            const productId = addToCartButton.getAttribute('data-product-id');
            const maxQuantity = parseInt(quantityInput.getAttribute('data-max-quantity')) || 0;
            
            console.log('Product ID:', productId, 'Max Quantity:', maxQuantity);
            
            // If product is out of stock, disable everything
            if (maxQuantity === 0) {
                console.log('Product is out of stock');
                return;
            }
            
            // Setup quantity controls
            setupQuantityControls();
            
            // Setup add to cart functionality
            setupAddToCart();
            
            function setupQuantityControls() {
                // Update quantity function
                function updateQuantity(change) {
                    let currentVal = parseInt(quantityInput.value) || 0;
                    const newValue = currentVal + change;
                    
                    // Validate minimum (1) and maximum (product.quantity)
                    if (newValue < 1) {
                        quantityInput.value = 1;
                        quantityMessage.textContent = "";
                    } else if (newValue > maxQuantity) {
                        quantityInput.value = maxQuantity;
                        quantityMessage.textContent = "Maximum quantity reached!";
                        increaseBtn.disabled = true;
                    } else {
                        quantityInput.value = newValue;
                        quantityMessage.textContent = "";
                        increaseBtn.disabled = false;
                    }
                    
                    // Enable/disable decrease button based on value
                    decreaseBtn.disabled = quantityInput.value <= 1;
                    
                    // Enable/disable increase button
                    increaseBtn.disabled = quantityInput.value >= maxQuantity;
                }

                // Event listeners for buttons
                increaseBtn.addEventListener('click', () => {
                    updateQuantity(1);
                });

                decreaseBtn.addEventListener('click', () => {
                    updateQuantity(-1);
                });

                // Validate manual input
                quantityInput.addEventListener('change', function() {
                    let value = parseInt(this.value) || 0;
                    
                    if (value < 1) {
                        this.value = 1;
                        quantityMessage.textContent = "";
                    } else if (value > maxQuantity) {
                        this.value = maxQuantity;
                        quantityMessage.textContent = "Maximum quantity reached!";
                    } else {
                        quantityMessage.textContent = "";
                    }
                    
                    // Update button states
                    increaseBtn.disabled = this.value >= maxQuantity;
                    decreaseBtn.disabled = this.value <= 1;
                });

                // Initialize button states
                decreaseBtn.disabled = quantityInput.value <= 1;
                increaseBtn.disabled = quantityInput.value >= maxQuantity;
            }
            
            function setupAddToCart() {
                addToCartButton.addEventListener('click', async function(e) {
                    e.preventDefault();
                    
                    const quantity = parseInt(quantityInput.value) || 1;
                    
                    console.log('Adding to cart - Product ID:', productId, 'Quantity:', quantity);
                    
                    await addToCart(productId, quantity, this);
                });
            }
            
            async function addToCart(productId, quantity, buttonElement) {
                try {
                    // Show loading state
                    const originalHTML = buttonElement.innerHTML;
                    buttonElement.innerHTML = '<span class="spinner-border spinner-border-sm" role="status"></span> Adding...';
                    buttonElement.disabled = true;
                    
                    console.log('Sending add-to-cart request for product:', productId);
                    
                    const response = await fetch('/user/add-to-cart', {
                        method: 'POST',
                        headers: {
                            'Content-Type': 'application/json',
                        },
                        credentials: 'include',
                        body: JSON.stringify({
                            productId: productId,
                            quantity: quantity
                        })
                    });
                    
                    const data = await response.json();
                    console.log('Add to cart response:', data);
                    
                    if (data.success) {
                        // Show success message
                        showNotification('Product added to cart successfully!', 'success');
                        updateCartCount(quantity);
                        
                        // Update product quantity in UI
                        updateProductQuantity(quantity);
                    } else {
                        if (data.redirect) {
                            window.location.href = data.redirect;
                        } else {
                            showNotification('Error: ' + data.message, 'error');
                        }
                    }
                } catch (error) {
                    console.error('Error adding to cart:', error);
                    showNotification('Error adding product to cart. Please try again.', 'error');
                } finally {
                    // Reset button state
                    buttonElement.innerHTML = 'Add to Cart';
                    buttonElement.disabled = false;
                }
            }
            
            // Update product quantity after adding to cart
            function updateProductQuantity(quantityAdded) {
                const newQuantity = maxQuantity - quantityAdded;
                
                // Update the quantity display
                maxQuantityDisplay.textContent = newQuantity;
                
                // Update max quantity attribute
                quantityInput.setAttribute('data-max-quantity', newQuantity);
                
                // If out of stock, disable everything
                if (newQuantity === 0) {
                    quantityInput.value = 0;
                    quantityInput.disabled = true;
                    increaseBtn.disabled = true;
                    decreaseBtn.disabled = true;
                    addToCartButton.disabled = true;
                    addToCartButton.innerHTML = 'Out of Stock';
                    
                    // Disable buy now button
                    const buyBtn = document.getElementById('buy-btn');
                    buyBtn.classList.add('disabled');
                    buyBtn.setAttribute('aria-disabled', 'true');
                    buyBtn.setAttribute('tabindex', '-1');
                    
                    quantityMessage.textContent = "Product is out of stock";
                } else {
                    // Update button states
                    const currentQuantity = parseInt(quantityInput.value) || 0;
                    increaseBtn.disabled = currentQuantity >= newQuantity;
                    decreaseBtn.disabled = currentQuantity <= 1;
                    
                    // If current quantity exceeds new max, adjust it
                    if (currentQuantity > newQuantity) {
                        quantityInput.value = newQuantity;
                        quantityMessage.textContent = "Quantity adjusted due to stock limit";
                    }
                }
            }
            
            // Update cart count in navbar
            function updateCartCount(quantity = 1) {
                const cartCountElement = document.getElementById('cart-count');
                if (cartCountElement) {
                    const currentCount = parseInt(cartCountElement.textContent) || 0;
                    cartCountElement.textContent = currentCount + quantity;
                    console.log('Cart count updated to:', cartCountElement.textContent);
                    
                    // Add animation effect
                    cartCountElement.classList.add('cart-updated');
                    setTimeout(() => {
                        cartCountElement.classList.remove('cart-updated');
                    }, 500);
                }
            }
            
            // Show notification function (better than alert)
            function showNotification(message, type = 'info') {
                // Create notification element
                const notification = document.createElement('div');
                notification.className = `alert alert-${type === 'success' ? 'success' : 'danger'} alert-dismissible fade show position-fixed`;
                notification.style.cssText = 'top: 20px; right: 20px; z-index: 9999; min-width: 300px;';
                notification.innerHTML = `
                    ${message}
                    <button type="button" class="close" data-dismiss="alert">
                        <span>&times;</span>
                    </button>
                `;
                
                // Add to body
                document.body.appendChild(notification);
                
                // Auto remove after 3 seconds
                setTimeout(() => {
                    notification.remove();
                }, 3000);
                
                // Close button functionality
                notification.querySelector('.close').addEventListener('click', () => {
                    notification.remove();
                });
            }
        });
    </script>

