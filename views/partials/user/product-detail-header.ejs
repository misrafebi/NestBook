    <!-- Image zoom script (keep this separate) -->
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize image zoom if needed
            if (typeof $ !== 'undefined' && $.fn.elevateZoom) {
                $('.zoom-img').elevateZoom({
                    zoomType: "inner",
                    cursor: "crosshair"
                });
            }
        });
    </script>
</body>
</html>