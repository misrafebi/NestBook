<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Navigation Bar</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">
    <style>
        /* #accountDropdown{
           margin-right: 65px !important;
        } */
        .menu_bar_logo {
            width: 120px;
            margin-left: 10px;
        }
    </style>
</head>

<body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <header class="navbar navbar-expand-lg navbar-light bg-light w-100">

            <!--navigation image-->
            <img src="/assets/sidebar.png" alt="NestBook" class="menu_bar_logo">


            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <!-- Left Aligned Links -->
                <ul class="navbar-nav me-auto">
                    <li class="nav-item">
                        <a class="nav-link" href="/user/home">Home</a>
                    </li>
                    <%if(categories.length>0){%>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="navbarDropdown" role="button"
                                data-bs-toggle="dropdown" aria-expanded="false">
                                Categories
                            </a>
                            <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                <%categories.forEach((category)=>{%>
                                    <li><a class="dropdown-item" href="#">
                                            <%=category.name%>
                                        </a></li>
                                    <%})%>
                            </ul>
                        </li>
                        <%}%>
                            <li class="nav-item">
                                <a class="nav-link" href="/user/aboutUs">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" href="/user/contactUs">Contact</a>
                            </li>
                </ul>


                <ul class="navbar-nav ms-auto d-none d-lg-flex">
                    <!--Search -->
                    <li class="nav-item">
                        <form class="form-inline">
                            <input class="form-control me-2" type="search" placeholder="Search Product"
                                aria-label="Search">
                        </form>
                    </li>
                    <!--Cart-->
                    <li class="nav-item">
                        <a class="nav-link" href="/user/cart"><i class="fas fa-shopping-cart"></i></a>
                    </li>
                    <!--Account-->
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountDropdown" role="button"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            <i class="fas fa-user"></i>
                        </a>
                        <!--drop down-->
                        <div class="dropdown-menu custom-dropdown" id="accountDropdown"
                            aria-labelledby="accountDropdown">
                            <a class="dropdown-item" href="/user/profile"><i class="fas fa-user"></i>&nbsp; Profile</a>
                            <a class="dropdown-item" href="/user/login"><i class="fas fa-lock"></i>&nbsp; Login</a>
                            <a class="dropdown-item" href="/user/signup"><i class="fas fa-user-plus"></i>&nbsp; Sign
                                Up</a>
                            <a class="dropdown-item" href="/user/products"><i class="fa-solid fa-book"></i>&nbsp;
                                Products</a>
                            <a class="dropdown-item" href="/user/orders"><i class="fas fa-shopping-cart"></i>&nbsp;
                                Orders</a>
                            <a class="dropdown-item" href="/user/cart"><i class="fas fa-shopping-bag"></i>&nbsp;
                                Cart</a>
                            <a class="dropdown-item" href="/user/wishlist"><i class="fas fa-heart"></i>&nbsp;
                                Wishlist</a>
                            <a class="dropdown-item" href="/user/wallet"><i class="fas fa-wallet"></i>&nbsp; Wallet</a>
                            <a class="dropdown-item" href="/user/logout"><i class="fas fa-sign-out-alt"
                                    style="color: #d60505;"></i>&nbsp; Logout</a>
                        </div>
                    </li>
                </ul>

                <!-- For Mobile -->
                <ul class="navbar-nav d-lg-none">
                    <li class="nav-item dropdown">
                        <a class="nav-link dropdown-toggle" href="#" id="accountDropdownMobile" role="button"
                            data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                            Account
                        </a>
                        <!--drop down for mobile-->
                        <div class="dropdown-menu" aria-labelledby="accountDropdownMobile">
                            <a class="dropdown-item" href="/user/profile"><i class="fas fa-user"></i>&nbsp; Profile</a>
                            <a class="dropdown-item" href="/user/login"><i class="fas fa-lock"></i>&nbsp; Login</a>
                            <a class="dropdown-item" href="/user/signup"><i class="fas fa-user-plus"></i>&nbsp; Sign
                                Up</a>
                            <a class="dropdown-item" href="/user/products"><i class="fa-solid fa-book"></i>&nbsp;
                                Products</a>
                            <a class="dropdown-item" href="/user/orders"><i class="fas fa-shopping-cart"></i>&nbsp;
                                Orders</a>
                            <a class="dropdown-item" href="/user/cart"><i class="fas fa-shopping-bag"></i>&nbsp;
                                Cart</a>
                            <a class="dropdown-item" href="/user/wishlist"><i class="fas fa-heart"></i>&nbsp;
                                Wishlist</a>
                            <a class="dropdown-item" href="/user/wallet"><i class="fas fa-wallet"></i>&nbsp; Wallet</a>
                            <a class="dropdown-item" href="/user/logout"><i class="fas fa-sign-out-alt"
                                    style="color: #d60505;"></i>&nbsp; Logout</a>
                        </div>
                    </li>
                </ul>
            </div>
        </header>
    </nav>

    <!-- Scripts -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>