<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Cart Page</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        body {
            font-family: Arial, sans-serif;
        }

        .cart-container {
            margin-top: 20px;
        }

        .cart-item {
            display: flex;
            align-items: center;
            margin-bottom: 20px;
            padding: 15px;
            border: 1px solid #eee;
            border-radius: 8px;
        }

        .cart-item img {
            width: 100px;
            height: 150px;
            object-fit: cover;
            position: relative;
        }

        .cart-item .remove-btn {
            position: absolute;
            top: 5px;
            right: 5px;
            background: #ff4444;
            color: white;
            border: none;
            border-radius: 50%;
            width: 25px;
            height: 25px;
            font-size: 16px;
            cursor: pointer;
            display: flex;
            align-items: center;
            justify-content: center;
        }

        .cart-item .remove-btn:hover {
            background: #cc0000;
        }

        .cart-item-details {
            flex-grow: 1;
            margin-left: 20px;
        }

        .cart-item-details h5 {
            margin: 0;
        }

        .cart-item-details .price {
            color: #666;
        }

        .order-summary {
            border: 1px solid #ddd;
            padding: 20px;
            margin-top: 20px;
            border-radius: 8px;
        }

        .order-summary h5 {
            margin-bottom: 20px;
        }

        .order-summary .summary-item {
            display: flex;
            justify-content: space-between;
            margin-bottom: 10px;
        }

        .order-summary .total {
            font-weight: bold;
            font-size: 1.1em;
            border-top: 1px solid #ddd;
            padding-top: 10px;
        }

        .place-order-btn {
            background: #ff5a5f;
            color: #fff;
            border: none;
            padding: 10px 20px;
            cursor: pointer;
            width: 100%;
            border-radius: 5px;
            font-size: 1.1em;
        }

        .place-order-btn:hover {
            background: #e04a4f;
        }

        .quantity-control {
            margin-top: 10px;
        }

        .quantity-control .input-group {
            width: 140px;
        }

        .quantity-control .form-control {
            text-align: center;
            border-left: none;
            border-right: none;
        }

        .quantity-control .btn {
            background-color: #f8f9fa;
            border: 1px solid #ced4da;
        }

        .quantity-control .btn:hover {
            background-color: #e9ecef;
        }

        .quantity-control .btn:disabled {
            opacity: 0.5;
            cursor: not-allowed;
        }

        .stock-message {
            font-size: 0.9em;
            color: #666;
            margin-top: 5px;
        }

        .out-of-stock {
            color: #dc3545;
            font-weight: bold;
        }
    </style>
</head>
<body>
    <%- include('../partials/user/nav-bar') %>

    <div class="container cart-container">
        <div class="row">
            <div class="col-md-8">
                <% if (cart && cart.items.length > 0) { %>
                    <% cart.items.forEach(item => { %>
                        <div class="cart-item" id="cart-item-<%= item._id %>">
                            <div class="position-relative">
                                <img src="/<%= item.ProductId.image[0] %>" alt="<%= item.ProductId.productName %>">
                                <button class="remove-btn remove-from-cart" 
                                        data-item-id="<%= item._id %>"
                                        title="Remove from cart">&times;</button>
                            </div>
                            <div class="cart-item-details">
                                <h5><%= item.ProductId.productName %></h5>
                                <p class="price">₹<%= item.price %> x <span class="item-quantity"><%= item.quantity %></span></p>
                                <p class="total">Total: ₹<span class="item-total"><%= item.totalPrice %></span></p>

                                <div class="quantity-control">
                                    <div class="input-group">
                                        <button class="btn btn-outline-secondary decrement-btn" 
                                                type="button" 
                                                data-item-id="<%= item._id %>"
                                                data-product-id="<%= item.ProductId._id %>">-</button>
                                        <input type="text" 
                                            class="form-control quantity-input" 
                                            value="<%= item.quantity %>" 
                                            data-item-id="<%= item._id %>"
                                            data-product-id="<%= item.ProductId._id %>"
                                            data-max-quantity="<%= item.ProductId.quantity %>">
                                        <button class="btn btn-outline-secondary increment-btn" 
                                                type="button" 
                                                data-item-id="<%= item._id %>"
                                                data-product-id="<%= item.ProductId._id %>">+</button>
                                    </div>
                                    <div class="stock-message">
                                        <% if (item.ProductId.quantity > 0) { %>
                                            <span class="in-stock"><%= item.ProductId.quantity %> in stock</span>
                                        <% } else { %>
                                            <span class="out-of-stock">Out of stock</span>
                                        <% } %>
                                    </div>
                                </div>
                            </div>
                        </div>
                    <% }) %>
                <% } else { %>
                    <div class="text-center py-5">
                        <h4>Your cart is empty</h4>
                        <a href="/user/products" class="btn btn-primary">Continue Shopping</a>
                    </div>
                <% } %>
            </div>
            
            <div class="col-md-4">
                <% if (cart && cart.items.length > 0) { %>
                    <div class="order-summary">
                        <h5>Order Summary</h5>
                        <div class="summary-item">
                            <span>Subtotal:</span>
                            <span id="subtotal">₹<%= cart.items.reduce((sum, item) => sum + item.totalPrice, 0) %></span>
                        </div>
                        <div class="summary-item">
                            <span>Shipping fee:</span>
                            <span>₹60</span>
                        </div>
                        <div class="summary-item total">
                            <span>Total Amount:</span>
                            <span id="total-amount">₹<%= cart.items.reduce((sum, item) => sum + item.totalPrice, 0) + 60 %></span>
                        </div>
                        <button class="place-order-btn">Place Order</button>
                    </div>
                <% } %>
            </div>
        </div>
    </div>

    <% if(message) { %>
        <script>alert('<%= message %>')</script>
    <% } %>

    <script src="https://code.jquery.com/jquery-3.5.1.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            // Initialize quantity controls
            initializeQuantityControls();
            
            // Remove from cart functionality
            initializeRemoveButtons();
            
            // Initialize button states
            updateAllQuantityButtons();
        });

        function initializeQuantityControls() {
            // Increment button event listeners
            document.querySelectorAll('.increment-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const itemId = this.getAttribute('data-item-id');
                    const productId = this.getAttribute('data-product-id');
                    const input = this.closest('.input-group').querySelector('.quantity-input');
                    const maxQuantity = parseInt(input.getAttribute('data-max-quantity'));
                    
                    let currentValue = parseInt(input.value) || 0;
                    
                    if (currentValue < maxQuantity) {
                        input.value = currentValue + 1;
                        updateCartQuantity(itemId, productId, input.value);
                    } else {
                        alert(`Only ${maxQuantity} items available in stock`);
                    }
                });
            });

            // Decrement button event listeners
            document.querySelectorAll('.decrement-btn').forEach(button => {
                button.addEventListener('click', function() {
                    const itemId = this.getAttribute('data-item-id');
                    const productId = this.getAttribute('data-product-id');
                    const input = this.closest('.input-group').querySelector('.quantity-input');
                    
                    let currentValue = parseInt(input.value) || 0;
                    
                    if (currentValue > 1) {
                        input.value = currentValue - 1;
                        updateCartQuantity(itemId, productId, input.value);
                    } else {
                        // If quantity becomes 0, remove the item
                        if (confirm('Remove this item from cart?')) {
                            removeCartItem(itemId);
                        }
                    }
                });
            });

            // Manual input validation
            document.querySelectorAll('.quantity-input').forEach(input => {
                input.addEventListener('change', function() {
                    const itemId = this.getAttribute('data-item-id');
                    const productId = this.getAttribute('data-product-id');
                    const maxQuantity = parseInt(this.getAttribute('data-max-quantity'));
                    
                    let value = parseInt(this.value) || 1;
                    
                    if (value < 1) {
                        value = 1;
                        this.value = 1;
                    } else if (value > maxQuantity) {
                        value = maxQuantity;
                        this.value = maxQuantity;
                        alert(`Only ${maxQuantity} items available in stock`);
                    }
                    
                    updateCartQuantity(itemId, productId, value);
                });
            });
        }

        function initializeRemoveButtons() {
            document.querySelectorAll('.remove-from-cart').forEach(button => {
                button.addEventListener('click', function() {
                    const itemId = this.getAttribute('data-item-id');
                    removeCartItem(itemId);
                });
            });
        }

        async function updateCartQuantity(itemId, productId, quantity) {
            try {
                // Show loading state
                const input = document.querySelector(`.quantity-input[data-item-id="${itemId}"]`);
                const originalValue = input.value;
                input.disabled = true;

                const response = await fetch('/user/update-cart-quantity', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify({
                        itemId: itemId,
                        productId: productId,
                        quantity: parseInt(quantity)
                    })
                });

                const data = await response.json();

                if (data.success) {
                    // Update the UI with new values
                    updateCartItemUI(itemId, data.updatedItem);
                    updateOrderSummary();
                    updateQuantityButtons(itemId);
                } else {
                    alert('Error: ' + data.message);
                    // Revert to original value
                    input.value = originalValue;
                }

            } catch (error) {
                console.error('Error:', error);
                alert('Error updating cart quantity');
            } finally {
                // Re-enable input
                const input = document.querySelector(`.quantity-input[data-item-id="${itemId}"]`);
                input.disabled = false;
            }
        }

        function updateCartItemUI(itemId, updatedItem) {
            // Update quantity display
            const quantityElement = document.querySelector(`#cart-item-${itemId} .item-quantity`);
            if (quantityElement) {
                quantityElement.textContent = updatedItem.quantity;
            }
            
            // Update total price
            const totalElement = document.querySelector(`#cart-item-${itemId} .item-total`);
            if (totalElement) {
                totalElement.textContent = updatedItem.totalPrice;
            }
            
            // Update input value
            const input = document.querySelector(`.quantity-input[data-item-id="${itemId}"]`);
            if (input) {
                input.value = updatedItem.quantity;
            }
        }

        function updateQuantityButtons(itemId) {
            const input = document.querySelector(`.quantity-input[data-item-id="${itemId}"]`);
            if (!input) return;

            const maxQuantity = parseInt(input.getAttribute('data-max-quantity'));
            const currentValue = parseInt(input.value) || 0;
            const incrementBtn = document.querySelector(`.increment-btn[data-item-id="${itemId}"]`);
            const decrementBtn = document.querySelector(`.decrement-btn[data-item-id="${itemId}"]`);

            if (incrementBtn) {
                if (currentValue >= maxQuantity) {
                    incrementBtn.disabled = true;
                } else {
                    incrementBtn.disabled = false;
                }
            }

            if (decrementBtn) {
                if (currentValue <= 1) {
                    decrementBtn.disabled = true;
                } else {
                    decrementBtn.disabled = false;
                }
            }
        }

        function updateAllQuantityButtons() {
            document.querySelectorAll('.quantity-input').forEach(input => {
                const itemId = input.getAttribute('data-item-id');
                updateQuantityButtons(itemId);
            });
        }

        async function removeCartItem(itemId) {
            if (!confirm('Are you sure you want to remove this item from your cart?')) {
                return;
            }

            try {
                const response = await fetch('/user/remove-from-cart', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    credentials: 'include',
                    body: JSON.stringify({
                        itemId: itemId
                    })
                });

                const data = await response.json();

                if (data.success) {
                    // Remove item from DOM
                    const cartItem = document.getElementById(`cart-item-${itemId}`);
                    if (cartItem) {
                        cartItem.remove();
                    }
                    
                    // Update cart count in navbar
                    updateCartCount(-1);
                    
                    // Update order summary
                    updateOrderSummary();
                    
                    // Show success message
                    alert('Item removed from cart successfully!');
                    
                    // If no items left, show empty cart message
                    if (document.querySelectorAll('.cart-item').length === 0) {
                        showEmptyCartMessage();
                    }
                } else {
                    alert('Error: ' + data.message);
                }

            } catch (error) {
                console.error('Error:', error);
                alert('Error removing item from cart');
            }
        }

        function updateCartCount(change) {
            const cartCountElement = document.getElementById('cart-count');
            if (cartCountElement) {
                const currentCount = parseInt(cartCountElement.textContent) || 0;
                const newCount = Math.max(0, currentCount + change);
                cartCountElement.textContent = newCount;
            }
        }

        function updateOrderSummary() {
            let subtotal = 0;
            
            document.querySelectorAll('.cart-item').forEach(item => {
                const totalElement = item.querySelector('.item-total');
                if (totalElement) {
                    const totalValue = parseFloat(totalElement.textContent);
                    subtotal += totalValue;
                }
            });
            
            const shippingFee = 60;
            const totalAmount = subtotal + shippingFee;
            
            // Update DOM
            const subtotalElement = document.getElementById('subtotal');
            const totalAmountElement = document.getElementById('total-amount');
            
            if (subtotalElement) subtotalElement.textContent = `₹${subtotal}`;
            if (totalAmountElement) totalAmountElement.textContent = `₹${totalAmount}`;
        }

        function showEmptyCartMessage() {
            const cartContainer = document.querySelector('.col-md-8');
            cartContainer.innerHTML = `
                <div class="text-center py-5">
                    <h4>Your cart is empty</h4>
                    <a href="/user/products" class="btn btn-primary">Continue Shopping</a>
                </div>
            `;
            
            // Hide order summary
            const orderSummary = document.querySelector('.order-summary');
            if (orderSummary) {
                orderSummary.style.display = 'none';
            }
        }
    </script>
    
    <%- include('../partials/user/footer') %>
</body>
</html>