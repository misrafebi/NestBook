<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Image Gallery</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <style>
        .image-section {
            padding: 20px 0;
        }
        .image-section h2 {
            text-align: center;
            margin-bottom: 20px;
        }
        .image-section .row {
            justify-content: center;
        }
    </style>
</head>
<body>

    <!-- Single Image -->
    <div class="container image-section">
        <h2>Single Image</h2>
        <div class="row">
            <div class="col-md-12 text-center">
                <img src="single-image.jpg" class="img-fluid" alt="Single Image">
            </div>
        </div>
    </div>

    <!-- Best Selling Images -->
    <div class="container image-section">
        <h2>Best Selling</h2>
        <div class="row">
            <div class="col-md-3">
                <img src="best-selling-1.jpg" class="img-fluid" alt="Best Selling 1">
                <p>Best Selling 1</p>
            </div>
            <div class="col-md-3">
                <img src="best-selling-2.jpg" class="img-fluid" alt="Best Selling 2">
                <p>Best Selling 2</p>
            </div>
            <div class="col-md-3">
                <img src="best-selling-3.jpg" class="img-fluid" alt="Best Selling 3">
                <p>Best Selling 3</p>
            </div>
            <div class="col-md-3">
                <img src="best-selling-4.jpg" class="img-fluid" alt="Best Selling 4">
                <p>Best Selling 4</p>
            </div>
        </div>
    </div>

    <!-- New Arrivals -->
    <div class="container image-section">
        <h2>New Arrivals</h2>
        <div class="row">
            <div class="col-md-2">
                <img src="new-arrival-1.jpg" class="img-fluid" alt="New Arrival 1">
                <p>New Arrival 1</p>
            </div>
            <div class="col-md-2">
                <img src="new-arrival-2.jpg" class="img-fluid" alt="New Arrival 2">
                <p>New Arrival 2</p>
            </div>
            <div class="col-md-2">
                <img src="new-arrival-3.jpg" class="img-fluid" alt="New Arrival 3">
                <p>New Arrival 3</p>
            </div>
            <div class="col-md-2">
                <img src="new-arrival-4.jpg" class="img-fluid" alt="New Arrival 4">
                <p>New Arrival 4</p>
            </div>
            <div class="col-md-2">
                <img src="new-arrival-5.jpg" class="img-fluid" alt="New Arrival 5">
                <p>New Arrival 5</p>
            </div>
            <div class="col-md-2">
                <img src="new-arrival-6.jpg" class="img-fluid" alt="New Arrival 6">
                <p>New Arrival 6</p>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
