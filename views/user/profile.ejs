    <script src="https://cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    
    <script>
        // Initialize Toastr
        toastr.options = {
            "closeButton": true,
            "progressBar": true,
            "positionClass": "toast-top-right",
            "timeOut": "3000"
        };

        // URL parameters handling
        $(document).ready(function() {
            const urlParams = new URLSearchParams(window.location.search);
            const message = urlParams.get('message');
            const type = urlParams.get('type');
            
            if (message) {
                if (type === 'error') {
                    toastr.error(message);
                } else {
                    toastr.success(message);
                }
                // Clean URL
                window.history.replaceState({}, document.title, window.location.pathname);
            }
            
            // Fetch cart and wishlist counts
            fetchCounts();
        });

        // Edit functions
        function enableEdit(field) {
            $(`#edit${field.charAt(0).toUpperCase() + field.slice(1)}Form`).show();
            $(`#display${field.charAt(0).toUpperCase() + field.slice(1)}`).parent().hide();
        }

        function cancelEdit(field) {
            $(`#edit${field.charAt(0).toUpperCase() + field.slice(1)}Form`).hide();
            $(`#display${field.charAt(0).toUpperCase() + field.slice(1)}`).parent().show();
        }

        async function saveName() {
            const newName = $('#editName').val().trim();
            if (!newName) {
                toastr.error('Please enter a valid name');
                return;
            }

            try {
                const response = await fetch('/user/update-profile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ name: newName })
                });

                const data = await response.json();
                
                if (data.success) {
                    $('#displayName').text(newName);
                    $('#userAvatar').text(newName.charAt(0).toUpperCase());
                    $('.welcome-text').text(`Welcome, ${newName}!`);
                    cancelEdit('name');
                    toastr.success('Name updated successfully!');
                    
                    // Update name in navbar if needed
                    const navName = document.querySelector('.navbar-user-name');
                    if (navName) navName.textContent = newName;
                } else {
                    toastr.error(data.message || 'Failed to update name');
                }
            } catch (error) {
                toastr.error('Error updating name. Please try again.');
            }
        }

        async function savePhone() {
            const newPhone = $('#editPhone').val().trim();
            const phoneRegex = /^[0-9]{10}$/;
            
            if (!phoneRegex.test(newPhone)) {
                toastr.error('Please enter a valid 10-digit phone number');
                return;
            }

            try {
                const response = await fetch('/user/update-profile', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({ phone: newPhone })
                });

                const data = await response.json();
                
                if (data.success) {
                    $('#displayPhone').text(newPhone);
                    cancelEdit('phone');
                    toastr.success('Phone number updated successfully!');
                } else {
                    toastr.error(data.message || 'Failed to update phone number');
                }
            } catch (error) {
                toastr.error('Error updating phone number. Please try again.');
            }
        }

        // Change password form
        $('#changePasswordForm').submit(async function(e) {
            e.preventDefault();
            
            const currentPassword = $('#currentPassword').val();
            const newPassword = $('#newPassword').val();
            const confirmPassword = $('#confirmPassword').val();
            
            // Validation
            if (!currentPassword || !newPassword || !confirmPassword) {
                toastr.error('Please fill in all fields');
                return;
            }
            
            if (newPassword.length < 8) {
                toastr.error('New password must be at least 8 characters long');
                return;
            }
            
            if (newPassword !== confirmPassword) {
                toastr.error('New passwords do not match');
                return;
            }
            
            if (currentPassword === newPassword) {
                toastr.error('New password must be different from current password');
                return;
            }
            
            // Show loader
            $('#passwordLoader').show();
            
            try {
                const response = await fetch('/user/change-password', {
                    method: 'POST',
                    headers: {
                        'Content-Type': 'application/json',
                    },
                    body: JSON.stringify({
                        currentPassword,
                        newPassword,
                        confirmPassword
                    })
                });
                
                const data = await response.json();
                $('#passwordLoader').hide();
                
                if (data.success) {
                    toastr.success('Password changed successfully!');
                    $('#changePasswordForm')[0].reset();
                } else {
                    toastr.error(data.message || 'Failed to change password');
                }
            } catch (error) {
                $('#passwordLoader').hide();
                toastr.error('Error changing password. Please try again.');
            }
        });

        // Toggle password visibility
        function togglePassword(fieldId) {
            const field = document.getElementById(fieldId);
            const toggleBtn = field.parentNode.querySelector('.password-toggle i');
            
            if (field.type === 'password') {
                field.type = 'text';
                toggleBtn.className = 'fas fa-eye-slash';
            } else {
                field.type = 'password';
                toggleBtn.className = 'fas fa-eye';
            }
        }

        // Fetch cart and wishlist counts
        async function fetchCounts() {
            try {
                const [cartResponse, wishlistResponse] = await Promise.all([
                    fetch('/user/get-cart-count'),
                    fetch('/user/get-wishlist-count')
                ]);
                
                if (cartResponse.ok) {
                    const cartData = await cartResponse.json();
                    if (cartData.success) {
                        $('#cartCount').text(cartData.count || 0);
                    }
                }
                
                if (wishlistResponse.ok) {
                    const wishlistData = await wishlistResponse.json();
                    if (wishlistData.success) {
                        $('#wishlistCount').text(wishlistData.count || 0);
                    }
                }
            } catch (error) {
                console.error('Error fetching counts:', error);
            }
        }

        // Update avatar color based on name
        function updateAvatarColor() {
            const avatar = document.getElementById('userAvatar');
            const name = '<%= user.name || "User" %>';
            const colors = [
                {bg: '#4a90e2', text: '#ffffff'}, // Blue
                {bg: '#50c878', text: '#ffffff'}, // Green
                {bg: '#ff6b6b', text: '#ffffff'}, // Red
                {bg: '#ffa500', text: '#ffffff'}, // Orange
                {bg: '#9b59b6', text: '#ffffff'}  // Purple
            ];
            
            if (name) {
                const charCode = name.charCodeAt(0);
                const colorIndex = charCode % colors.length;
                avatar.style.background = colors[colorIndex].bg;
                avatar.style.color = colors[colorIndex].text;
            }
        }
        
        // Call avatar color update on load
        updateAvatarColor();
    </script>

