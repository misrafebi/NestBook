<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Product Page - Atomic Habits</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css" rel="stylesheet">

    <style>
        .product-page {
            padding: 20px;
        }
        .product-image-container {
            position: relative;
        }
        .heart-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background: none;
            border: none;
        }
        .heart-button i {
            font-size: 24px;
            color: red;
        }
        .quantity-controls {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }
        .quantity-controls input {
            width: 60px;
            text-align: center;
        }
        .suggestions {
            margin-top: 40px;
        }
        .suggestions img {
            max-width: 100%;
        }
        .quantity-control {
            display: flex;
            align-items: center;
            margin-top: 10px;
        }

        #quantity-input {
            width: 60px;
            border: none;
            background-color: #e3e3e3;
        }

        .decrement-btn {
            border: none;
            background-color: #e3e3e3;
            border-radius: 5px 0px 0px 5px;
        }

        .increment-btn {
            border: none;
            background-color: #e3e3e3;
            border-radius: 0px 5px 5px 0px;
        }
        .date{
            color: #a9a7a7;
            font-size: 13px;
        }
        #Profile{
            background-color: green;
        }
        .star {
            font-size: 2rem;

            background: none;
            border: none;
            cursor: pointer;
            color: gray;
           
            padding: 0;
            margin: 0 5px;
        }

        .star:hover {
            color: gold;
            
        }
        .review-form{
            display: none;
        }
    </style>
    <script>
        // function toggleReviewForm() {
        //     var form = document.getElementById("reviewForm");
        //     if (form.style.display === "none") {
        //         form.style.display = "block";
        //     } else {
        //         form.style.display = "none";
        //     }
        // }

       
    </script>
</head>
<body>
    <%- include('../partials/user/nav-bar')%>

    <div class="container product-page">
        <br><br>
        <div class="row">
            <div class="col-md-6 product-image-container">
                <img src="atomic-habits.jpg" alt="Atomic Habits" class="img-fluid">
                <button class="heart-button"><i class="fas fa-heart"></i></button>
                <div class="mt-3">
                    <button class="btn btn-warning ">Add to Cart</button>
                    <button class="btn btn-danger ">Buy Now</button>
                </div>
            </div>
            <div class="col-md-6">
                <h4>ATOMIC HABITS</h4>
                <p>4.2 - 72 Ratings | INSTOCK</p>
                <p>â‚¹766</p>

                <div class="quantity-control">
                    <div class="quantity-control-div">
                        <div class="input-group mb-3">
                            <button class="btn btn-outline-secondary decrement-btn" type="button">-</button>
                            <input type="text" class="form-control " placeholder="1" id="quantity-input"
                                aria-label="Example text with two button addons">
                            <button class="btn btn-outline-secondary increment-btn" type="button">+</button>
                        </div>
                   </div>
                </div>
                
                <div class="mt-3">
                    <button class="btn btn-secondary">Details</button>
                    <button class="btn btn-outline-light">Reviews</button>
                </div>
                <br>

                <div class="review-section">
                    <h5>Reviews</h5>
       
                    <button class="btn btn-outline-dark"  id="write-review-btn">Write a Review</button>

                    <!-- <button class="btn btn-outline-dark" onclick="toggleReviewForm()">Write a Review</button> -->
                    <br>
                    <div class="review-form" id="reviewForm">
                        <form>
                            <div class="form-group">
                                <label for="name">Name</label>
                                <input type="text" class="form-control" id="name" name="name">
                            </div>
                            <div class="form-group">
                                <label for="email">Email</label>
                                <input type="email" class="form-control" id="email" name="email">
                            </div>
                            <div class="form-group">
                                <label for="number">Number</label>
                                <input type="text" class="form-control" id="number" name="number">
                            </div>
                            <div class="form-group">
                                <label for="rating">Rating</label>
                                <div id="rating" class="d-flex">
                                    <div class="form-group">
                                       
                                        <button type="button" class="star" data-value="1"><i
                                                class="fa-solid fa-star"></i></button>
                                        <button type="button" class="star" data-value="2"><i
                                                class="fa-solid fa-star"></i></button>
                                        <button type="button" class="star" data-value="3"><i
                                                class="fa-solid fa-star"></i></button>
                                        <button type="button" class="star" data-value="4"><i
                                                class="fa-solid fa-star"></i></button>
                                        <button type="button" class="star" data-value="5"><i
                                                class="fa-solid fa-star"></i></button>
                                    </div>
                                </div>
                            </div>
                            <div class="form-group">
                                <label for="review">Review</label>
                                <textarea class="form-control" id="review" rows="3" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary  btn-block">Submit</button>
                        </form>
                    </div>

                    <br>

                    <div>
                        <div class="d-flex align-items-center" id="">
                            <div class="rounded-circle  bg-secondary text-white text-center" id="Profile" style="width: 40px; height: 40px;">
                                <span class="d-block mt-1 " id="">E</span>
                            </div>
                            <div class="ml-3">
                                <h6>Emil</h6>
                                <p class="date">Date: 2022-01-01</p>
                                <p>Great book with insightful strategies for building good habits!</p>
                            </div>
                        </div>
                        <hr>
                    </div>
                    
                </div>
                <button class="btn btn-outline-secondary">Load More Reviews</button>
            </div>
        </div>
        <div class="suggestions mt-5">
            <h5>You might also like</h5>
            <div class="row">
                <div class="col-md-2">
                    <img src="suggestion1.jpg" alt="Suggestion 1" class="img-fluid">
                </div>
                
            </div>
        </div>
    </div>
    <script>
        const writeReviewBtn = document.getElementById('write-review-btn')
        const postReviewForm = document.getElementById('reviewForm')

        writeReviewBtn.addEventListener('click',()=>{
            if(postReviewForm.style.display==='none' || postReviewForm.style.display===''){
                postReviewForm.style.display='block'
                writeReviewBtn.textContent='Hide review Form'
            }else{
                postReviewForm.style.display='none'
                writeReviewBtn.textContent='Write Review'
            }

        })
    </script>
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    <script src="https://kit.fontawesome.com/a076d05399.js"></script>
    <%- include('../partials/user/footer')%>

</body>
</html>
